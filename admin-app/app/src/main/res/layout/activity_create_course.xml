<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".activities.CreateCourseActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/background_light">

        <!-- Custom Header Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingEnd="48dp"
            android:layout_marginBottom="16dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:layout_marginEnd="16dp"
                app:tint="@color/primary_blue"
                android:contentDescription="@string/desc_back_btn" />

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/create_course_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/primary_blue" />

        </LinearLayout>

        <!-- Required Fields Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/section_header_background"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_required"
                android:layout_marginEnd="8dp"
                app:tint="@color/error_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/form_header_required"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indicator_required"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/error_color" />

        </LinearLayout>

        <!-- Day of Week -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/form_field_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/form_label_day_of_week"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/indicator_required"
                    android:textSize="14sp"
                    android:textColor="@color/error_color" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <Spinner
                    android:id="@+id/spinner_day_of_week"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    style="@style/EnhancedSpinnerStyle"
                    android:entries="@array/days_of_week" />

                <ImageView
                    android:id="@+id/iv_error_day_of_week"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_error"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/form_field_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_time"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/form_label_time"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/indicator_required"
                    android:textSize="14sp"
                    android:textColor="@color/error_color" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <EditText
                    android:id="@+id/edit_time"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/form_hint_time"
                    android:inputType="time"
                    android:textSize="16sp"
                    android:background="@drawable/enhanced_edit_text_background"
                    android:padding="12dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/secondary_text" />

                <ImageView
                    android:id="@+id/iv_error_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_error"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Capacity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_field_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_people"
                    app:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/form_label_capacity"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/indicator_required"
                    android:textColor="@color/error_color"
                    android:textSize="14sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <EditText
                    android:id="@+id/edit_capacity"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/enhanced_edit_text_background"
                    android:hint="@string/form_hint_capacity"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/secondary_text"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_error_capacity"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_error"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Duration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/form_field_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_duration"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/form_label_duration"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/indicator_required"
                    android:textSize="14sp"
                    android:textColor="@color/error_color" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <EditText
                    android:id="@+id/edit_duration"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/form_hint_duration"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:background="@drawable/enhanced_edit_text_background"
                    android:padding="12dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/secondary_text" />

                <ImageView
                    android:id="@+id/iv_error_duration"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_error"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/form_field_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_price"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/form_label_price"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/indicator_required"
                    android:textSize="14sp"
                    android:textColor="@color/error_color" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <EditText
                    android:id="@+id/edit_price"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/form_hint_price"
                    android:inputType="numberDecimal"
                    android:textSize="16sp"
                    android:background="@drawable/enhanced_edit_text_background"
                    android:padding="12dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/secondary_text" />

                <ImageView
                    android:id="@+id/iv_error_price"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_error"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Class Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/form_field_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_yoga"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/form_label_class_type"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/indicator_required"
                    android:textSize="14sp"
                    android:textColor="@color/error_color" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <Spinner
                    android:id="@+id/spinner_class_type"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    style="@style/EnhancedSpinnerStyle"
                    android:entries="@array/class_types" />

                <ImageView
                    android:id="@+id/iv_error_class_type"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_error"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Optional Fields Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/section_header_background"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_optional"
                android:layout_marginEnd="8dp"
                app:tint="@color/primary_blue" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/form_header_optional"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indicator_optional"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/success_color" />

        </LinearLayout>

        <!-- Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/form_field_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_description"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_description"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <EditText
                android:id="@+id/edit_description"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:hint="@string/form_hint_description"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:textSize="16sp"
                android:background="@drawable/enhanced_edit_text_background"
                android:padding="12dp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/secondary_text" />

        </LinearLayout>

        <!-- Instructor Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/form_field_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_instructor"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/form_label_instructor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <EditText
                android:id="@+id/edit_instructor"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/form_hint_instructor"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:background="@drawable/enhanced_edit_text_background"
                android:padding="12dp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/secondary_text" />

        </LinearLayout>

        <!-- Room Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/form_field_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/form_label_room"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <EditText
                android:id="@+id/edit_room"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/form_hint_room"
                android:inputType="text"
                android:textSize="16sp"
                android:background="@drawable/enhanced_edit_text_background"
                android:padding="12dp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/secondary_text" />

        </LinearLayout>

        <!-- Difficulty Level -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/form_field_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_optional"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/form_label_difficulty"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_difficulty"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                style="@style/EnhancedSpinnerStyle"
                android:entries="@array/difficulty_levels" />

        </LinearLayout>

        <!-- Equipment Needed -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/form_field_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_equipment"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/form_label_equipment"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <EditText
                android:id="@+id/edit_equipment"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/form_hint_equipment"
                android:inputType="text"
                android:textSize="16sp"
                android:background="@drawable/enhanced_edit_text_background"
                android:padding="12dp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/secondary_text" />

        </LinearLayout>

        <!-- Age Group -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/form_field_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_people"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/form_label_age_group"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_age_group"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                style="@style/EnhancedSpinnerStyle"
                android:entries="@array/age_groups" />

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:text="@string/button_clear_form"
                android:textSize="15sp"
                android:textStyle="bold"
                android:singleLine="true"
                style="@style/OutlinedBlueButtonStyle" />

            <Button
                android:id="@+id/btn_create_course"
                style="@style/BlueButtonStyle"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="12dp"

                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/button_create_course"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>