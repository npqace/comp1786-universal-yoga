<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/splash_background"
    android:padding="32dp">

    <TextView
        android:id="@+id/tv_offline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/error_color"
        android:text="@string/you_are_currently_offline"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Logo Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="48dp"
        android:layout_marginTop="48dp">

        <!-- Logo Icon -->
        <ImageView
            android:id="@+id/logo_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_yoga"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/desc_course_logo" />

        <!-- App Title -->
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-light" />

        <!-- App Subtitle -->
        <TextView
            android:id="@+id/app_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_subtitle"
            android:textSize="18sp"
            android:textColor="@color/light_blue"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light" />

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_tagline"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Loading Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <!-- Loading Progress -->
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Loading Text -->
        <TextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_loading"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

    <!-- Version Info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:alpha="0.6"
        android:layout_marginBottom="16dp" />

</LinearLayout>