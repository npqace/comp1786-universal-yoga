<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <!-- Icon -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_time"
            android:layout_marginEnd="12dp"
            app:tint="@color/primary_blue" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_title_time_picker"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text" />

    </LinearLayout>

    <!-- Selected Time Display -->
    <TextView
        android:id="@+id/tv_selected_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_select_time"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/details_card_background"
        android:layout_marginBottom="20dp" />

    <!-- Time Pickers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <!-- Hour Picker -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_hour"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:layout_marginBottom="8dp" />

            <NumberPicker
                android:id="@+id/hour_picker"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:theme="@style/NumberPickerStyle" />

        </LinearLayout>

        <!-- Separator -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_separator"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginTop="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- Minute Picker -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_minutes"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:layout_marginBottom="8dp" />

            <NumberPicker
                android:id="@+id/minute_picker"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:theme="@style/NumberPickerStyle" />

        </LinearLayout>

    </LinearLayout>

    <!-- AM/PM Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_am"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="@string/dialog_am"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"
            android:background="@drawable/time_button_background"
            android:textColor="@color/primary_text" />

        <Button
            android:id="@+id/btn_pm"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="@string/dialog_pm"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:background="@drawable/time_button_background"
            android:textColor="@color/primary_text" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@string/action_cancel"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/outlined_button_background"
            android:textColor="@color/primary_blue"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BlueButtonStyle"
            android:text="@string/action_confirm"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/primary_button_background"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:enabled="true" />
    </LinearLayout>

</LinearLayout>