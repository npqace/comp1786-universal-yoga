<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with course type and price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/desc_course_logo"
                android:src="@drawable/yoga_logo"
                android:layout_marginEnd="8dp"
                app:tint="@color/primary_blue" />

            <TextView
                android:id="@+id/tv_course_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/course_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course_price"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:background="@drawable/details_card_background"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Day and time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="@string/desc_calendar_icon"
                android:src="@drawable/ic_calendar"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tv_day_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course_time"
                android:textSize="14sp"
                android:textColor="@color/secondary_text" />

        </LinearLayout>

        <!-- Capacity and duration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="@string/desc_capacity"
                android:src="@drawable/ic_people"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_capacity_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course_capacity"
                android:textSize="14sp"
                android:textColor="@color/secondary_text" />

        </LinearLayout>

        <!-- Default Instructor (optional) -->
        <TextView
            android:id="@+id/tv_instructor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_instructor"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_instructor" />

        <!-- Room (optional) -->
        <TextView
            android:id="@+id/tv_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_location"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_location"/>

        <!-- Difficulty (optional) -->
        <TextView
            android:id="@+id/tv_difficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_difficulty"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_level"/>

        <!-- Equipment (optional) -->
        <TextView
            android:id="@+id/tv_equipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_equipment"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_equipment"/>

        <!-- Age Group (optional) -->
        <TextView
            android:id="@+id/tv_age_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_age_group"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_people"/>

        <!-- Description (optional) -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_description"
            android:textSize="14sp"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="8dp"
            android:background="@drawable/details_card_background"
            android:padding="12dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_description"/>

        <!-- Created date -->
        <TextView
            android:id="@+id/tv_created_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_created_date"
            android:textSize="12sp"
            android:textColor="@color/secondary_text"
            android:textStyle="italic"
            android:layout_marginBottom="12dp" />

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/action_edit"
                android:textSize="12sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                style="@style/OutlinedBlueButtonStyle" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_delete"
                android:textSize="12sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:visibility="visible"
                style="@style/RedButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>