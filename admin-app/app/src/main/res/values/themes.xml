<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YogaAdmin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/accent_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_blue</item>
        <!-- Make status bar icons light (white) -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- Prevent edge-to-edge extension -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.YogaAdmin.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:navigationBarColor">@color/dark_blue</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Custom Blue DatePicker Theme -->
    <style name="Theme.YogaAdmin.DatePicker" parent="Theme.Material3.DayNight.Dialog">
        <!-- Primary brand color (affects selected date, header background) -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color (affects selection indicators) -->
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Accent color (affects buttons and highlights) -->
        <item name="colorAccent">@color/primary_blue</item>
        <!-- Explicit button styling to ensure visibility -->
        <item name="android:colorAccent">@color/primary_blue</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <!-- Button text colors for Save/Cancel buttons -->
        <item name="android:buttonBarButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:borderlessButtonStyle">@style/DatePickerButtonStyle</item>
        <!-- Dialog background -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <!-- DatePicker Button Style to ensure visibility -->
    <style name="DatePickerButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="rippleColor">@color/primary_blue</item>
    </style>
</resources>
