<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/yoga_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/yoga_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.YogaAdmin"
        tools:targetApi="31">
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.YogaAdmin.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.CreateCourseActivity"
            android:exported="false" />
        <activity
            android:name=".activities.YogaClassListActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CreateClassActivity"
            android:exported="false" />
    </application>

</manifest>